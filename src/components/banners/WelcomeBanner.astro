---
import { Image } from 'astro:assets';

import backgroundImage from '@assets/for_content/img/GBSRiedbach2.jpg';

console.log("WelcomeBanner.astro");
console.log(backgroundImage);
---

<div 
	class="mx-8 h-welcomBannerHeight overflow-clip grid grid-cols-1 grid-rows-1 " 
	data-aos="fade-up"
	data-aos-duration="2200">
	<div class="flex flex-col-reverse h-full col-start-1 row-start-1">
		<Image
			src={backgroundImage}
			alt={"background image"}
			class="min-h-full object-cover object-left-bottom"
		/>
	</div>
	<div class="h-full p-4 col-start-1 row-start-1 mix-blend-color-dodge font-title flex flex-col-reverse text-right">
		<h2 class="text-5xl md:text-7xl lg:text-7xl drop-shadow-xs text-slate-300">
			Rettungsversuch<br>letzter ABDe 4/8
		</h2>
	</div>
</div>

<div class="px-8">
	<div 
		class="bg-secondary h-1.5 w-full"
		data-aos="fade-up"
		data-aos-duration="2200">
	</div>
</div>